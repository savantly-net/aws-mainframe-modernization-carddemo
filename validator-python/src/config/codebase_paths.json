{
  "codebase_root": "../..",
  "technology_detection": {
    "enabled": true,
    "auto_detect": true,
    "manual_override": null,
    "templates_file": "config/technology_templates.json"
  },
  "file_patterns": {
    "generic_source_code": {
      "description": "Generic source code files",
      "patterns": [
        "**/*.java",
        "**/*.py",
        "**/*.js",
        "**/*.ts",
        "**/*.go",
        "**/*.rb",
        "**/*.php",
        "**/*.cbl",
        "**/*.jcl"
      ],
      "directories": [
        "**/src",
        "**/app",
        "**/lib",
        "**/main",
        "**/cbl",
        "**/jcl"
      ],
      "analysis_type": "generic_analysis"
    },
    "generic_configuration": {
      "description": "Generic configuration files",
      "patterns": [
        "**/*.json",
        "**/*.yaml",
        "**/*.yml",
        "**/*.xml",
        "**/*.properties",
        "**/*.env*"
      ],
      "directories": ["**/config", "**/conf", "**/"],
      "analysis_type": "configuration_analysis"
    },
    "generic_documentation": {
      "description": "Generic documentation files",
      "patterns": ["**/*.md", "**/*.txt", "**/*.rst", "**/*.adoc"],
      "directories": ["**/docs", "**/documentation", "**/"],
      "analysis_type": "documentation_analysis"
    }
  },
  "analysis_config": {
    "generic_analysis": {
      "extract_function_names": true,
      "extract_class_names": true,
      "extract_import_statements": true,
      "extract_variable_declarations": true,
      "extract_comments": true,
      "extract_string_literals": true
    },
    "configuration_analysis": {
      "extract_config_keys": true,
      "extract_environment_variables": true,
      "extract_dependencies": true,
      "extract_settings": true
    },
    "documentation_analysis": {
      "extract_documentation_sections": true,
      "extract_code_examples": true,
      "extract_api_descriptions": true
    },
    "program_analysis": {
      "extract_program_names": true,
      "extract_transaction_ids": true,
      "extract_file_references": true,
      "extract_database_references": true,
      "extract_mq_references": true,
      "extract_cics_commands": true
    },
    "job_analysis": {
      "extract_job_names": true,
      "extract_program_calls": true,
      "extract_dataset_references": true,
      "extract_parameters": true
    },
    "schema_analysis": {
      "extract_table_names": true,
      "extract_column_definitions": true,
      "extract_relationships": true,
      "extract_constraints": true
    },
    "screen_analysis": {
      "extract_screen_names": true,
      "extract_field_definitions": true,
      "extract_validation_rules": true
    },
    "data_structure_analysis": {
      "extract_record_layouts": true,
      "extract_field_definitions": true,
      "extract_data_types": true
    },
    "cics_analysis": {
      "extract_transaction_definitions": true,
      "extract_program_definitions": true,
      "extract_file_definitions": true
    },
    "data_analysis": {
      "extract_data_structures": true,
      "extract_sample_data": true,
      "extract_data_formats": true
    }
  },
  "technology_patterns": {
    "cobol_patterns": {
      "program_name": "PROGRAM-ID\\s+([A-Z0-9]{1,8})",
      "transaction_id": "EXEC\\s+CICS\\s+[A-Z]+\\s+TRANSID\\s+([A-Z0-9]{4})",
      "file_reference": "SELECT\\s+([A-Z0-9-]+)\\s+ASSIGN\\s+TO\\s+([A-Z0-9-]+)",
      "database_reference": "EXEC\\s+SQL\\s+(SELECT|INSERT|UPDATE|DELETE)",
      "mq_reference": "EXEC\\s+CICS\\s+(GET|PUT)\\s+QUEUE"
    },
    "jcl_patterns": {
      "job_name": "//\\s*([A-Z0-9@#$]{1,8})\\s+JOB",
      "program_call": "//\\s+STEP\\s+\\d+\\s+EXEC\\s+PGM=([A-Z0-9]{1,8})",
      "dataset_reference": "//\\s+([A-Z0-9-]+)\\s+DD\\s+DSN=([A-Z0-9.@#$]+)"
    },
    "database_patterns": {
      "table_name": "CREATE\\s+TABLE\\s+([A-Z0-9_]+)",
      "column_definition": "([A-Z0-9_]+)\\s+(CHAR|VARCHAR|INTEGER|DECIMAL)",
      "foreign_key": "FOREIGN\\s+KEY\\s*\\(([A-Z0-9_,\\s]+)\\)\\s+REFERENCES"
    },
    "cics_patterns": {
      "transaction_definition": "DEFINE\\s+TRANSACTION\\s+([A-Z0-9]{4})",
      "program_definition": "DEFINE\\s+PROGRAM\\s+([A-Z0-9]{1,8})",
      "file_definition": "DEFINE\\s+FILE\\s+([A-Z0-9-]+)"
    }
  },
  "integration_points": {
    "database_integrations": {
      "db2": {
        "patterns": ["**/ddl/**/*.ddl", "**/ddl/**/*.DDL"],
        "keywords": [
          "DB2",
          "SQL",
          "CREATE TABLE",
          "INSERT",
          "SELECT",
          "UPDATE",
          "DELETE"
        ]
      },
      "ims": {
        "patterns": ["**/ims/**/*.dbd", "**/ims/**/*.DBD"],
        "keywords": ["IMS", "DBD", "SEGM", "FIELD", "DBDGEN"]
      },
      "vsam": {
        "patterns": ["**/*.cbl", "**/*.CBL"],
        "keywords": ["VSAM", "KSDS", "ESDS", "RRDS", "SELECT", "ASSIGN"]
      }
    },
    "messaging_integrations": {
      "mq": {
        "patterns": ["**/*.cbl", "**/*.CBL"],
        "keywords": ["MQ", "GET", "PUT", "QUEUE", "EXEC CICS"]
      }
    },
    "transaction_integrations": {
      "cics": {
        "patterns": ["**/*.cbl", "**/*.CBL", "**/*.csd", "**/*.CSD"],
        "keywords": ["CICS", "EXEC CICS", "TRANSID", "COMMAREA"]
      }
    }
  },
  "output_directories": {
    "analysis_results": "data/analysis_results",
    "validation_results": "data/validation_results",
    "reports": "reports",
    "logs": "logs"
  },
  "file_extensions": {
    "supported_formats": [
      ".cbl",
      ".CBL",
      ".cob",
      ".COB",
      ".jcl",
      ".JCL",
      ".ddl",
      ".DDL",
      ".dbd",
      ".DBD",
      ".bms",
      ".BMS",
      ".cpy",
      ".CPY",
      ".csd",
      ".CSD",
      ".dat",
      ".DAT"
    ],
    "text_formats": [".txt", ".md", ".json", ".xml", ".csv"]
  }
}
